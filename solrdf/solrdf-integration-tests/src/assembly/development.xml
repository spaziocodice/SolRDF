<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dev</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/../solrdf-core/src/solr-home</directory>
			<outputDirectory>/solrdf</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>	
	</fileSets>	
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>/solrdf/store/lib</outputDirectory>
			<excludes>
				<exclude>*:lucene*</exclude>
				<exclude>*:jetty*</exclude>
				<exclude>*:hadoop*</exclude>
				<exclude>*:javax.servlet*</exclude>
				<exclude>*:solr-*:*</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>